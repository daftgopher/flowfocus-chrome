{
  "manifest_version": 3,

  "name": "Flow Focus",
  "description": "Tracks how much time you spend on distracting websites",
  "version": "0.3",

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "images/icon.png",
    "default_popup": "popup.html",
    "default_title": "Flow Focus"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "notifications"
  ]
}
