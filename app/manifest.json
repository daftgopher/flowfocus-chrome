{
  "manifest_version": 3,

  "name": "Flow Focus",
  "description": "Tracks how much time you spend on distracting websites",
  "version": "0.0.1",

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "images/icons/icon_16.png",
    "default_popup": "popup.html",
    "default_title": "Flow Focus"
  },
  "icons": {
    "16": "images/icons/icon_16.png",
    "48": "images/icons/icon_48.png",
    "128": "images/icons/icon_128.png"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "notifications"
  ]
}
